{
  "name": "tree-markdown-parser",
  "version": "0.1.0",
  "description": "Parse fenced tree blocks into an AST and render rich HTML or other outputs.",
  "keywords": [
    "markdown",
    "markdown-parser",
    "tree",
    "file-tree",
    "directory-tree",
    "ast",
    "parser",
    "documentation",
    "html-renderer",
    "developer-tools"
  ],
  "homepage": "https://amanssur.com/portfolio/tree-markdown",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amanssur-tech/tree-markdown-parser.git"
  },
  "bugs": {
    "url": "https://github.com/amanssur-tech/tree-markdown-parser/issues"
  },
  "author": "Amanullah Manssur",
  "license": "MIT",
  "packageManager": "pnpm@10.27.0",
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./tree.css": "./dist/renderer/tree.css",
    "./tmd-doc.css": "./dist/renderer/tmd-doc.css",
    "./remark": {
      "types": "./dist/remark/treeMdTransform.d.ts",
      "default": "./dist/remark/treeMdTransform.js"
    },
    "./preprocess": {
      "types": "./dist/cli/preprocess.d.ts",
      "default": "./dist/cli/preprocess.js"
    },
    "./markdown-it": {
      "types": "./dist/markdown-it/markdownItTree.d.ts",
      "default": "./dist/markdown-it/markdownItTree.js"
    }
  },
  "bin": {
    "tree-markdown-parser": "dist/cli/preprocess.js",
    "tmd": "dist/cli/preprocess.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json && node tooling/copy-css.mjs",
    "dev": "pnpm build && node tooling/preview-watch.mjs --open",
    "mermaid": "pnpm build && node tooling/mermaid-demo.mjs --open",
    "tmd": "pnpm build && node dist/cli/preprocess.js",
    "test": "vitest",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "typecheck": "tsc -p tsconfig.json --noEmit && tsc -p tsconfig.test.json --noEmit",
    "check": "pnpm lint && pnpm typecheck",
    "prettier": "prettier --write .",
    "contents": "local/project_contents.sh",
    "prepare": "pnpm build && chmod +x dist/cli/preprocess.js"
  },
  "dependencies": {
    "eslint-plugin-unused-imports": "^4.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^24.10.4",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.7.4",
    "rehype-raw": "^7.0.0",
    "rehype-stringify": "^10.0.1",
    "remark": "^15.0.1",
    "remark-rehype": "^11.1.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0",
    "vitest": "^4.0.16"
  }
}
